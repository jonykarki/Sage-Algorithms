def mono(perm, message, encrypt=True):
    def preprocess(a_str):
        alp = "ABCDEFGHIJKLMNOPQRSTUVWXYZ "
        b_str = "".join(a for a in a_str if a in alp)
        return [alp.index(b)+1 for b in b_str]

    def postprocess(a_list):
        alp = "ABCDEFGHIJKLMNOPQRSTUVWXYZ "
        return "".join([alp[i-1] for i in a_list])

    perm = PermutationGroup([key]).0
    num_to_perm = perm.dict()
    num_to_dperm = dict((v,k) for k,v in num_to_perm.items())
    msg = preprocess(message)
    emsg = [num_to_perm[i] if encrypt else num_to_dperm[i] for i in msg]
    return postprocess(emsg)

